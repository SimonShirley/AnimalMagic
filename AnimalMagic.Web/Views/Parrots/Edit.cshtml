@model Parrot

@{
    ViewData["Title"] = "Edit Parrot Details";
}

<div class="container">
    <div class="row">
        <div class="col">
            <h1>Edit Details</h1>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <form class="form" method="post" asp-action="Edit">
                <table class="table">
                    <tr>
                        <td><label asp-for="Name">Your parrot's name:</label></td>
                        <td>
                            <input type="text" asp-for="Name" pattern="[A-Za-z]+" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <td><label asp-for="Claws">How many claws they have:</label></td>
                        <td>
                            <input type="number" inputmode="numeric" pattern="[0-9]." asp-for="Claws" />
                            <span asp-validation-for="Claws" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <td><label asp-for="Sound">Their favourite sound:</label></td>
                        <td>
                            <input type="text" asp-for="Sound" pattern="[A-Za-z]+" />
                            <span asp-validation-for="Sound" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2"><input type="submit" class="btn btn-primary" value="Edit" /></td>
                    </tr>
                </table>
                <input type="hidden" asp-for="Id" />
            </form>
        </div>
    </div>
</div>
