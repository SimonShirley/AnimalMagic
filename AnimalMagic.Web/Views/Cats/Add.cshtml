@model Cat

@{
    ViewData["Title"] = "Add New Cat";
}

<div class="container">
    <div class="row mb-4">
        <div class="col">
            <h1>Your Cat</h1>
            <p>If you would like AnimalMagic to look after your cat, please tell us more about them:</p>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <form class="form" method="post" asp-action="Add">
                <table class="table">
                    <tr>
                        <td><label asp-for="Name">Your cat's name:</label></td>
                        <td>
                            <input type="text" asp-for="Name" pattern="[A-Za-z]+" />
                            <span asp-validation-for="Name" class="text-danger"></span> 
                        </td>
                    </tr>
                    <tr>
                        <td><label asp-for="Legs">How many legs they have:</label></td>
                        <td>
                            <input type="number" inputmode="numeric" pattern="[0-9]." asp-for="Legs" />
                            <span asp-validation-for="Legs" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <td><label asp-for="Sound">The sound the make:</label></td>
                        <td>
                            <input type="text" asp-for="Sound" pattern="[A-Za-z]+" />
                            <span asp-validation-for="Sound" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2"><input type="submit" class="btn btn-primary" value="Add" /></td>
                    </tr>
                </table>
            </form>
        </div>
    </div>
</div>