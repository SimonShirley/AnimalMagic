@model IEnumerable<Cat>

@{
    if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" role="alert">@TempData["SuccessMessage"]</div>
    }

    if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger" role="alert">@TempData["ErrorMessage"]</div>
    }
}

<div class="row">
    <div class="col text-center">
        <table class="table">
            <thead>
                <th>Id</th>
                <th>Type</th>
                <th>Name</th>
                <th>Legs</th>
                <th>Sound</th>
            </thead>
            <tbody>
                @foreach (var cat in Model)
                {
                    <tr>
                        <td>@cat.Id</td>
                        <td>@cat.GetType().Name</td>
                        <td>@cat.Name</td>
                        <td>@cat.Legs</td>
                        <td>@cat.Sound</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="row">
    <div class="col-s12 col-m6 col-l4">
        <a class="btn btn-primary" asp-controller="Cats" asp-action="Add">Add New Cat</a>
    </div>
</div>
